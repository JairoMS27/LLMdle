---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  puzzleNumber: number;
}

const { puzzleNumber } = Astro.props;
---

<header class="flex items-center justify-between py-4 border-b border-base-300">
  <button id="help-btn" class="btn btn-ghost btn-sm btn-circle" aria-label="How to play">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </button>

  <div class="text-center">
    <h1 class="text-2xl font-bold tracking-wider">LLMdle</h1>
    <p class="text-xs text-base-content/60">#{puzzleNumber}</p>
  </div>

  <div class="flex items-center gap-2">
    <button id="stats-btn" class="btn btn-ghost btn-sm btn-circle" aria-label="Statistics">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
    </button>
    <ThemeToggle />
  </div>
</header>
