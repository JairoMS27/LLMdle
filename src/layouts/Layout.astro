---
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
}

const { title = 'LLMdle - Daily LLM Guessing Game' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Guess the LLM model name in 6 tries. A daily word game for AI enthusiasts." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <Analytics />

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('llmdle-theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
